@model ProjetoAspNetMVC.Presentation.Models.TarefaEdicaoModel

@{
    ViewData["Title"] = "Edicao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Edição de tarefa do usuário</h5>
Utilize o formulário para editar a tarefa
<br />
<br />

@using (Html.BeginForm("Edicao", "Tarefa", FormMethod.Post, new { @autocomplete = "off" }))
{
    <!-- campo oculto para armazenar o ID da tarefa -->
    @Html.HiddenFor(model => model.IdTarefa)

    <div class="row">
        <div class="col-md-6">
            <label>Nome da Tarefa:</label>
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
        </div>
        <div class="col-md-3">
            <label>Data da Tarefa:</label>
            @Html.TextBoxFor(model => model.Data, new { @class = "form-control", @type = "date" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Data)
            </span>
        </div>
        <div class="col-md-3">
            <label>Hora da Tarefa:</label>
            @Html.TextBoxFor(model => model.Hora, new { @class = "form-control", @type = "time" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Hora)
            </span>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-6">
            <label>Descrição da Tarefa:</label>
            @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </span>
        </div>
        <div class="col-md-3">
            <label>Prioridade da Tarefa:</label>
            @Html.DropDownListFor(model => model.Prioridade,
                Html.GetEnumSelectList(typeof(ProjetoAspNetMVC.Models.PrioridadeTarefa)),
                new { @class = "form-select" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Prioridade)
            </span>
        </div>
    </div>
    <br />

    <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
 }



